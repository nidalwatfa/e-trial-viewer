// screens/HomeScreen.js
import React from 'react';
import { View, Text, StyleSheet, FlatList } from 'react-native';
// استيراد مكون البطاقة الذي أنشأناه
import TrialCard from '../components/TrialCard';

// بيانات وهمية مؤقتة للمحاكمات
const MOCK_TRIALS = [
  { id: '1', caseNumber: 'جنايات #452', court: 'محكمة الجنايات الكبرى - القاعة 1', time: '10:00 ص' },
  { id: '2', caseNumber: 'تجاري #88', court: 'محكمة البداية - الدائرة التجارية', time: '11:30 ص' },
  { id: '3', caseNumber: 'مدني #201', court: 'محكمة الصلح - القاعة 3', time: '01:00 م' },
  { id: '4', caseNumber: 'إداري #55', court: 'المحكمة الإدارية العليا', time: '02:30 م' },
];

const HomeScreen = ({ navigation }) => {
  
  const renderItem = ({ item }) => (
    <TrialCard 
      caseNumber={item.caseNumber} 
      court={item.court}
      time={item.time}
      // دالة onPress: عند الضغط على البطاقة، ننتقل إلى شاشة تفاصيل المحاكمة (سننشئها لاحقًا)
      onPress={() => console.log('View details for:', item.caseNumber)} 
    />
  );
  
  return (
    <View style={styles.container}>
      <Text style={styles.headerTitle}>المحاكمات المباشرة اليوم</Text>
      
      <FlatList
        data={MOCK_TRIALS}
        renderItem={renderItem}
        keyExtractor={(item) => item.id}
        // إضافة مسافة علوية للقائمة
        contentContainerStyle={styles.listContainer}
        ListEmptyComponent={() => (
          <Text style={styles.emptyText}>لا توجد محاكمات مباشرة حالياً.</Text>
        )}
      />
    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#f5f5f5', 
  },
  headerTitle: {
    fontSize: 20,
    fontWeight: 'bold',
    marginHorizontal: 15,
    marginTop: 10,
    marginBottom: 5,
    color: '#16213e',
    textAlign: 'right', // لضبط العنوان ليتناسب مع اللغة العربية
  },
  listContainer: {
    paddingVertical: 10,
  },
  emptyText: {
    textAlign: 'center',
    marginTop: 50,
    fontSize: 16,
    color: '#999',
  }
});

export default HomeScreen;
// screens/LiveTrialScreen.js
import React from 'react';
import { View, Text, StyleSheet, Dimensions } from 'react-native';

// نحصل على أبعاد الشاشة لتحديد حجم "مشغل الفيديو"
const { width } = Dimensions.get('window');
const VIDEO_HEIGHT = width * 0.6; // مثلاً، 60% من عرض الشاشة

const LiveTrialScreen = ({ route }) => {
  // استقبال بيانات المحاكمة من شاشة Home (سنقوم بتمريرها لاحقاً)
  const { caseNumber, court } = route.params || { caseNumber: 'غير محدد', court: 'غير محدد' };

  return (
    <View style={styles.container}>
      {/* 1. مساحة عرض الفيديو (المحاكي) */}
      <View style={styles.videoPlayer}>
        <Text style={styles.videoText}>بث المحاكمة المباشر هنا</Text>
      </View>
      
      {/* 2. تفاصيل المحاكمة */}
      <View style={styles.detailsContainer}>
        <Text style={styles.detailHeader}>التفاصيل الحالية:</Text>
        <Text style={styles.detailText}>القضية: {caseNumber}</Text>
        <Text style={styles.detailText}>المحكمة: {court}</Text>
        <Text style={styles.detailStatus}>الحالة: جلسة علنية ومباشرة</Text>
      </View>

    </View>
  );
};

const styles = StyleSheet.create({
  container: {
    flex: 1,
    backgroundColor: '#fff',
  },
  videoPlayer: {
    width: width,
    height: VIDEO_HEIGHT,
    backgroundColor: '#000', // لون أسود لتمثيل شاشة الفيديو
    justifyContent: 'center',
    alignItems: 'center',
  },
  videoText: {
    color: '#fff',
    fontSize: 18,
  },
  detailsContainer: {
    padding: 15,
  },
  detailHeader: {
    fontSize: 18,
    fontWeight: 'bold',
    marginBottom: 8,
    color: '#16213e',
  },
  detailText: {
    fontSize: 16,
    marginBottom: 4,
    color: '#333',
  },
  detailStatus: {
    fontSize: 16,
    fontWeight: '600',
    marginTop: 10,
    color: 'green',
  },
});

export default LiveTrialScreen;
